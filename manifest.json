{
  "manifest_version": 2,

  "name": "Beer Goggles",
  "description": "Beer Goggles allows you to don a pair of virtual beer goggles and view the web through hazy eyes.",
  "version": "0.0.1",

   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Beer Goggles<br>PRPLrs"
   },

   "background":{
      "scripts": ["background.js"],
      "persistent": false
    },
    
   "web_accessible_resources": [
      "icon.png",
      "goggles.svg",
      "gogglesClip.svg"
    ],
        
   "permissions": [
      "background",
      "activeTab",
      "https://ajax.googleapis.com/",
      "desktopCapture" 
   ]
}