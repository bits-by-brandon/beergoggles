{
  "manifest_version": 2,

  "name": "Beer Goggles",
  "description": "Beer Goggles allows you to don a pair of virtual beer goggles and view the web through hazy eyes.",
  "version": "0.0.1",

   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Beer Goggles by PRPLrs"
   },
   
   "content_scripts": [ {
       "js": [ "jquery-1.11.2.min.js", "jquery.facedetection.js"],
       "matches": [ "http://*/*", "https://*/*"]
   }],
   
   "background":{
      "scripts": ["background.js"],
      "persistent": false
    },
    
   "web_accessible_resources": [
      "icon.png",
      "goggles.svg",
      "gogglesClip.svg",
      "people.jpg"
    ],
        
   "permissions": [
      "background",
      "activeTab",
      "https://ajax.googleapis.com/",
      "desktopCapture"
   ]
   
}